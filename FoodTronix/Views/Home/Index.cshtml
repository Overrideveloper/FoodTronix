@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>FoodTronix | Home</title>
    <link rel="stylesheet" href="~/Landing/css/normalize.css">
    <link rel="stylesheet" href="~/Landing/css/main.css" media="screen" type="text/css">
    <link href='http://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Playball' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/Landing/css/bootstrap.css">
    <link rel="stylesheet" href="~/Landing/css/style-portfolio.css">
    <link rel="stylesheet" href="~/Landing/css/picto-foundry-food.css" />
    <link rel="stylesheet" href="~/Landing/css/jquery-ui.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Landing/css/font-awesome.min.css" rel="stylesheet">
    <link rel="icon" href="favicon-1.ico" type="image/x-icon">
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="row">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">FoodTronix</a>
                </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav main-nav  clear navbar-right ">
                        <li><a class="navactive color_animation" href="#top">WELCOME</a></li>
                        <li><a class="color_animation" href="#story">ABOUT</a></li>
                        <li><a class="color_animation" href="#featured">FEATURED</a></li>
                        <li><a class="color_animation" href="#hours">HOURS</a></li>
                        <li><a class="color_animation" href="@Url.Action("Login", "Account")">LOGIN</a></li>
                        <li><a class="color_animation" href="@Url.Action("Register", "Account")">SIGNUP</a></li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div>
        </div><!-- /.container-fluid -->
    </nav>

    <div id="top" class="starter_container bg">
        <div class="follow_container">
            <div class="col-md-6 col-md-offset-3">
                <h2 class="top-title"> FoodTronix</h2>
                <h2 class="white second-title">" Amazing meals at your beck and call.... <b>literally.</b> "</h2>
                <hr>
            </div>
        </div>
    </div>
    <!-- ============ About Us ============= -->
    <section id="story" class="description_content">
        <div class="text-content container">
            <div class="col-md-6">
                <h1>About us</h1>
                <div class="fa fa-cutlery fa-2x"></div>
                <p class="desc-text">Restaurant is a place for simplicity. Good food, good service and efficient service at that. 'Simple and efficient' is the name of the game, and we’re good at finding it in all the right places, even in your dining experience. We’re a small group from the <b>Scorch Lands of The North</b> who make simple and efficient food possible. Come join us and see what simplicity and efficiency taste like.</p>
            </div>
            <div class="col-md-6">
                <div class="img-section">
                    <img src="~/Landing/images/kabob.jpg" width="250" height="220">
                    <img src="~/Landing/images/limes.jpg" width="250" height="220">
                    <div class="img-section-space"></div>
                    <img src="~/Landing/images/radish.jpg" width="250" height="220">
                    <img src="~/Landing/images/corn.jpg" width="250" height="220">
                </div>
            </div>
        </div>
    </section>
    <!-- ============ Featured Dish  ============= -->
    <section id="featured" class="description_content">
        <div class="featured background_content">
            <h1>Our Featured Dishes <span>Menu</span></h1>
        </div>
        <div class="text-content container">
            <div class="col-md-6">
                <h1>Have a look to our dishes!</h1>
                <div class="icon-hotdog fa-2x"></div>
                <p class="desc-text">Each food is handmade at the crack of dawn, using only the simplest of ingredients to bring out smells and flavors that beckon the whole block. Stop by anytime and experience simplicity at its finest.</p>
            </div>
            <div class="col-md-6">
                <ul class="image_box_story2">
                    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                        </ol>
                        <!-- Wrapper for slides -->
                        <div class="carousel-inner">
                            <div class="item active">
                                <img src="~/Landing/images/slider1.jpg" alt="...">
                                <div class="carousel-caption">

                                </div>
                            </div>
                            <div class="item">
                                <img src="~/Landing/images/slider2.jpg" alt="...">
                                <div class="carousel-caption">

                                </div>
                            </div>
                            <div class="item">
                                <img src="~/Landing/images/slider3.JPG" alt="...">
                                <div class="carousel-caption">

                                </div>
                            </div>
                        </div>
                    </div>
                </ul>
            </div>
        </div>
    </section>
    <!-- ============ Reservation  ============= -->
    <section id="hours" class="description_content">
        <div class="featured background_content">
            <h1>We're Open!</h1>
        </div>
        <div class="text-content container">
            <div class="inner contact">
                <!-- Form Area -->
                <div class="contact-form">
                    <!-- Form -->
                    <form id="contact-us">
                        <!-- Left Inputs -->
                        <div class="container">
                            <div class="row">
                                <div class=" text-center">
                                        <h2 class="text-center" style="letter-spacing:3px">Hours</h2><hr>
                                        <p class="text-center" style="word-spacing:5px">Monday to Friday: <b>7:30 AM - 11:30 AM </b></p><hr>
                                        <p class="text-center" style="word-spacing:5px">Saturday & Sunday: <b>8:00 AM - 9:00 AM</b></p><hr>
                                        <p class="text-center" style="word-spacing:5px">Monday to Friday: <b>12:00 PM - 5:00 PM</b></p><hr>
                                        <p class="text-center" style="word-spacing:5px">Monday to Saturday: <b>6:00 PM - 1:00 AM</b></p><hr>
                                        <p class="text-center" style="word-spacing:5px">Sunday to Monday: <b>5:30 PM - 12:00 AM</b></p>
                                    </div>
                            </div>
                        </div>
                        <!-- Clear -->
                        <div class="clear"></div>
                    </form>
                </div><!-- End Contact Form Area -->
            </div><!-- End Inner -->
        </div>
    </section>
    <!-- ============ Social Section  ============= -->
    <section class="social_connect">
        <div class="text-content container">
            <div class="col-md-6">
                <span class="social_heading">FOLLOW</span>
                <ul class="social_icons">
                    <li><a class="icon-twitter color_animation" href="http://twitter.com/Overrideveloper" target="_blank"></a></li>
                    <li><a class="icon-github color_animation" href="http://github.com/Overrideveloper" target="_blank"></a></li>
                    <li><a class="icon-mail color_animation" href="mailto:bansowisdom@gmail.com"></a></li>
                </ul>
            </div>
            <div class="col-md-4">
                <span class="social_heading">OR DIAL</span>
                <span class="social_info"><a class="color_animation" href="tel:+2348140723300">(234) 814-072-3300</a></span>
            </div>
        </div>
    </section>
    <!-- ============ Footer Section  ============= -->
    <footer class="sub_footer">
        <div class="container">
            <div class="col-md-4"><p class="sub-footer-text text-center">&copy; FoodTronix @DateTime.Now.Year</p></div>
            <div class="col-md-4">
                <p class="sub-footer-text text-center">Back to <a href="#top">TOP</a></p>
            </div>
        </div>
    </footer>

    <script type="text/javascript" src="~/Landing/js/jquery-1.10.2.min.js"> </script>
    <script type="text/javascript" src="~/Landing/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Landing/js/jquery-1.10.2.js"></script>
    <script type="text/javascript" src="~/Landing/js/jquery.mixitup.min.js"></script>
    <script type="text/javascript" src="~/Landing/js/main.js"></script>
</body>
</html>